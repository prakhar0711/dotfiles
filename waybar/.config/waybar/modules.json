{
    "custom/spotify": {
        "format": "{}",
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/metadata.sh",
        "interval": 2,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-click-middle": "playerctl previous"
    },
    "custom/cava-internal": {
        "exec": "sh ~/.config/waybar/scripts/Cava.sh",
        "format": "{}",
        "tooltip": false,
        "layer": "below",
        "output": "all"
    }
}
